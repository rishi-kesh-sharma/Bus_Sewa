<!-- contact section starts  -->

<section class="contact" id="contact">
    <h1 class="heading">
      <span>CONTACT</span>
      <span>US</span>
    </h1>
  
    <div class="row">
      <div class="image">
        <!-- <img src="images/contact-img.svg" alt=""> -->
        <video
          src="./assets/video/contact-background.mp4"
          id="video-slider"
          loop
          autoplay
          muted
        ></video>
      </div>
  
   <% if(authenticated){ %>

      <form method="POST" action="/api/contact/">
        <div class="inputBox">
          <input type="text" placeholder="name" name="name" required value=<%= user.name %> />
          <input type="email" placeholder="email" name="email" required value=<%= user.email %> />
        </div>
        <div class="inputBox">
          <input type="number" placeholder="number" name="phone" required value=<%= user.phone %> />
          <input type="text" placeholder="address" name="address" required value=<%= user.address %> />
        </div>

         <div class="inputBox">
           <input type="text" name="message" />
         </div>
        <input type="submit" class="btn" value="send message" />
      </form>
       

    <% }else{ %>
        <form method="post" action="/api/contact">
          <div class="inputBox">
            <input type="text" placeholder="name" name="name" required/>
            <input type="email" placeholder="email" name="email" required />
          </div>
          <div class="inputBox">
            <input type="number" placeholder="number" name="phone" required />
            <input type="text" placeholder="address" name="address" required />

          </div>
          <div class="inputBox">
             <input type="text" name="message" />
          </div>
          <input type="submit" class="btn" value="send message" />
        </form>

    <% } %>
    </div>
  </section>
  
  <!-- contact section ends -->
  